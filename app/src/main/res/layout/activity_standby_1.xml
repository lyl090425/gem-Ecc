<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:attr="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    tools:context=".Standby.View.StandbyActivity"
    android:background="#134e7c"
    android:id="@+id/standby">
    <TextView
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:background="@drawable/logo"/>
    <ImageView
        android:id="@+id/standby_gouset"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/guanli"/>
    <RelativeLayout
        android:layout_marginTop="50dp"
        android:layout_width="235dp"
        android:layout_height="720dp">

        <ImageView
            android:layout_width="235dp"
            android:layout_height="200dp"
            android:background="@drawable/standby_weather"
            />
        <RelativeLayout
            android:layout_width="235dp"
            android:layout_height="200dp">
            <TextView
                android:id="@+id/standby_clazzname"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="五年级四班"/>
            <TextView
                android:id="@+id/standby_clazztext"
                android:layout_alignParentTop="true"
                android:layout_marginTop="40dp"
                android:layout_width="200dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_centerHorizontal="true"
                android:layout_height="60dp"
                android:textSize="10sp"
                android:text="班级格言"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextClock
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:layout_marginTop="100dp"
                android:textSize="30sp"
                android:textColor="#000079"
                android:id="@+id/textClock"
                tools:targetApi="jelly_bean_mr1" />
            <ImageView
                android:id="@+id/standby_we_image"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="10dp"

                android:layout_width="80dp"
                android:layout_height="60dp" />
            <TextView
                android:id="@+id/standby_we_c"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="160dp"
                android:layout_marginLeft="20dp"
                android:textSize="30sp"
                android:text="22℃"
                android:textColor="#ffd306"
                android:layout_width="70dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#000079"
                android:id="@+id/standby_we_d"
                android:layout_alignParentRight="true"
                android:layout_marginTop="150dp"
                android:layout_marginRight="10dp"
                android:text="天气建议："
                android:textSize="10sp"
                android:layout_width="130dp"
                android:layout_height="60dp" />
        </RelativeLayout>
        <ImageView
            android:onClick="onChangeFragment"
            android:id="@+id/btn_11"
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:background="@drawable/standby_classinfo"
            android:layout_marginTop="220dp"
            />
        <ImageView
            android:onClick="onChangeFragment"
            android:id="@+id/btn_12"
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:background="@drawable/standby_classtable"
            android:layout_marginTop="220dp"
            android:layout_marginLeft="125dp"
            />
        <ImageView
            android:onClick="onChangeFragment"
            android:id="@+id/btn_21"
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:background="@drawable/standby_zhiri"
            android:layout_marginTop="300dp"/>
        <ImageView
            android:onClick="onChangeFragment"
            android:id="@+id/btn_22"
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:background="@drawable/standby_redflag"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="125dp"
            />
        <ImageView
            android:onClick="onChangeFragment"
            android:id="@+id/btn_31"
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:background="@drawable/standby_classsport"
            android:layout_marginTop="380dp"/>
        <ImageView
            android:onClick="onChangeFragment"
            android:id="@+id/btn_32"
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:background="@drawable/standby_classring"
            android:layout_marginTop="380dp"
            android:layout_marginLeft="125dp"/>
        <sprotecc.com.example.easyhealth.eh_sprotecc.Tool.PowerImageView
            android:layout_width="340dp"
            android:layout_height="200dp"
            android:background="@drawable/standby_attendance"
            attr:auto_play="true"
            android:layout_marginTop="470dp"/>
        <TextView
            android:id="@+id/standby_total"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:textSize="15sp"
            android:text="18"
            android:layout_width="40dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/standby_arrved"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="85dp"
            android:gravity="center"
            android:textSize="15sp"
            android:text="18"
            android:layout_width="40dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/standby_noarrved"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="160dp"
            android:gravity="center"
            android:textSize="15sp"
            android:text="18"
            android:layout_width="40dp"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/standby_framegroup"
        android:layout_width="1000dp"
        android:layout_height="580dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="250dp"
        android:background="#ffffff"/>
    <ImageView
        android:layout_width="1000dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="250dp"
        android:background="@drawable/news_background"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="260dp"
        android:background="@drawable/news_laba"/>
    <ImageView
        android:onClick="onChangeFragment"
        android:id="@+id/btn_more"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/news_chakan"/>
    <TextView

        android:layout_alignParentBottom="true"
        android:layout_marginLeft="300dp"
        android:layout_width="wrap_content"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:text="@string/news_Flag"
        android:textColor="#ffff93"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/news_top"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="400dp"
        android:layout_width="800dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:text="暂无新闻"
        android:textColor="#ffff93"
        android:layout_height="wrap_content" />











</RelativeLayout>
