<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MySportData.View.MySportDataActivity"
    android:id="@+id/my_sport_data"
    android:background="#134e7c">
    <TextView
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:background="@drawable/logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="40sp"
        android:textColor="#ffffff"
        android:id="@+id/my_sport_data_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂无体温数据"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:id="@+id/my_sport_data_temp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp" />
    <ImageView
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:background="@drawable/swingcard_ydbs"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="40sp"
        android:gravity="center"
        android:textColor="#ffffff"
       android:layout_marginTop="255dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/my_sport_data_ydbs" />
    <ImageView
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:background="@drawable/swingcard_kll"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:id="@+id/imageView3" />
    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"

        android:textSize="30sp"
        android:id="@+id/my_sport_data_kkl"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_marginLeft="920dp"
        android:layout_marginTop="280dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="千焦"
        android:textSize="10sp"
        android:textColor="#ffffff"
        android:layout_marginLeft="1005dp"
        android:layout_marginTop="310dp" />
    <ImageView
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:background="@drawable/swingcard_hdd"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imageView"
        android:layout_toStartOf="@+id/imageView"
        android:layout_marginRight="70dp"
        android:layout_marginEnd="70dp"
        android:id="@+id/imageView2" />
    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"

        android:textSize="30sp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="280dp"
        android:id="@+id/my_sport_data_hhd" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看详情"
        android:textSize="25sp"
        android:textColor="#f9f900"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_toLeftOf="@+id/imageView4"
        android:layout_toStartOf="@+id/imageView4"
        android:id="@+id/textView3" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/swingcard_com"
        android:layout_alignTop="@+id/my_sport_data_name"
        android:layout_alignRight="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3"
        android:id="@+id/imageView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="正在打卡"
        android:textSize="20sp"
        android:textColor="#ffd306"
        android:layout_marginTop="550dp"
        android:id="@+id/my_sport_data_isswingcard"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="正在上传运动数据"
        android:textSize="20sp"
        android:textColor="#ffd306"
        android:layout_marginTop="600dp"
        android:id="@+id/my_sport_data_isuploadsportdata"
        android:layout_centerHorizontal="true" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="650dp"
            android:layout_marginLeft="100dp"
            android:background="@drawable/swingcard_sportdistance"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="25sp"
        android:textColor="#4dffff"
        android:layout_marginTop="655dp"
        android:layout_marginLeft="180dp"
        android:id="@+id/my_sport_data_sportdistance"
         />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="650dp"
            android:layout_marginLeft="450dp"
            android:background="@drawable/swingcard_sportspeed"

            />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#4dffff"
        android:layout_marginTop="655dp"
        android:layout_marginLeft="530dp"
        android:id="@+id/my_sport_data_sportspeed"
        />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="650dp"
            android:layout_marginLeft="800dp"
            android:background="@drawable/swingcard_sporttime"
            />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#4dffff"
        android:layout_marginTop="655dp"
        android:layout_marginLeft="880dp"
        android:id="@+id/my_sport_data_sporttime"
        />



</RelativeLayout>
